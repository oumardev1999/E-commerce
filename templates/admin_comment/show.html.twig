{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    
 <div class="container mt-5  py-5 class="bg-image" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT5-tIpNTbfQjvDdCTQkqeWIpw4BcIiOTt5QA&usqp=CAU')">
 <div class="card">
 <div class="card-header text-danger text-center">
 <h1 class="text-center">Comment</h1>
 </div>
  <div class="card-body">
      <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_comment_index') }}">back to list</a>

    <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('admin_comment/_delete_form.html.twig') }}
  </div>
</div>
</div>
{% endblock %}