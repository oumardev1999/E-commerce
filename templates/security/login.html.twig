{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="container  py-5">
  <div class="container py-5 bg-light">
    <div class="row ">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
       <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-center">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
  <div class="d-grid gap-2 d-md-flex justify-content-md-end py-3 ">
    <button class="btn  btn-outline-warning " type="submit">
        Sign in
    </button>
    </div>
</form>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
         <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQwZW5Q_Mml5CCc5-GBPVRSY2a4BPzaAKoC8g&usqp=CAU"
                  class="img-fluid" alt="Sample image">
    <div class="container py-6">      
     
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
       <a href="{{path('app_register')}}" class="btn btn-outline-warning">S'inscrir</a>
   <a href="{{path('app_forgot_password_request')}}" class="btn btn-outline-warning ">Forget password</a>
   </div>
   </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>
{% endblock %}

