{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
  
<div class="container mt-5  py-5 class="bg-image" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuL06EhUcqs7jKKPLuq6QEfxSFovoiYPLxGA&usqp=CAU')">
 <div class="card">
 <div class="card-header text-danger text-center">
   <h1 class="text-center"> Nos diff√©rentes Category </h1>
 </div>
  <div class="card-body">
     <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                <form method="post" action="{{ path('app_admin_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-success">Delete</button>
</form>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Create new</a>
  </div>
</div>
</div

   
{% endblock %}