{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
   
   <div class="container mt-5  py-5 class="bg-image" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRkTRg73wlWGVcAO6L8ZWcOls09eiJ7lR1jA&usqp=CAU')">
 <div class="card">
  <div class="card-header">
      <h1 class="text-center">{{ category.name }}</h1>
  </div >
  <div class="card-body">
      <a href="{{ path('app_category_index') }}">Retourner à la liste des catégorie</a>
    <div class="mt-5">
    <table class="table">
        <thead>
            <tr>
              
                <th>Articles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
               
                <td>{{ article.title }}</td>
              
                <td>
                    <a href="{{ path('app_articles_show', {'id': article.id}) }}">show</a>
                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
  </div>
</div>
</div>
    
{% endblock %}
