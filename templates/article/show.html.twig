{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container mt-5  py-5 class="bg-image" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSnQLSNgtp_fhokon06Nm8g_ZsULjunmpRe3Q&usqp=CAU')>
   <div class="card">
 <div class="card-header text-danger text-center">
