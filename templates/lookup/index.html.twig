{% extends 'base.html.twig' %}

{% block title %}Hello LookupController!{% endblock %}

{% block body %}
 
 <div class="container mt-5  py-5 class="bg-image" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSdxt1Z82Q7kJRcsAwr7tDDZG6Q_HpfyJWZmw&usqp=CAU')">
 <div class="card">
  <div class="card-header">
    <h1 class="text-center"> Résultat de la rcherche</h1>
  </div >
  <div class="card-body">
     <h2 class="text-center"> Nous avons trouvé les articles suivants</h2>
  
     {% for article in articles %}
     <div>
        <h3>{{ article.title }} </h3>
        <div>
         <a href="{{ path('app_articles_show', {'id': article.id}) }}">Consulter le contenu de l'article</a>
        </div>
     </div>
    {% else %}
       <div>
          Aucun articles disponible pour c'est critères de recherche
        </div>
        {% endfor %}
  </div>
</div>
</div>

   
{% endblock %}

